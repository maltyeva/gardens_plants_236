<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @garden.banner_url %>');">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @plants.each do |plant| %>
      <div class="col-6">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= plant.image_url %>')">
          <%= plant.name%>
          <%= link_to plant_path(plant), method: :delete, data: {confirm: "Are you sure you'd like to delete this plant?"} do  %>
            <i class="fa fa-trash"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= link_to "Add a new plant!",  new_garden_plant_path(@garden), class: "btn btn-primary" %>
<%= link_to 'Edit', edit_garden_path(@garden) %> |
<%= link_to 'Back', gardens_path %>